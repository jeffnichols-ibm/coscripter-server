<% reason = nil unless defined? reason %>
<% deadline = nil unless defined? deadline %>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
      "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<!-- START:maintenance -->
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="en">
<head>
  <title>CoScripter Maintenance</title>
  <link href="/coscripter/stylesheets/coscripter.css" media="all" rel="stylesheet" type="text/css" />
  <link href="/coscripter/stylesheets/browse.css" media="all" rel="stylesheet" type="text/css" />
</head>
<body>
  <div class="main-area-with-shadows">
    <div class="main-coscripter-area">
      <table cellpadding="0" cellspacing="0" width="100%">
	<tr class="banner">
	  <td class="banner-image">

	    <a href="/coscripter/"><img alt="CoScripter" border="0" height="38" src="/coscripter/images/coscripter-logo-white-on-gray.gif" width="141" /></a>
	  </td>
	</tr>
      </table>

      <a name="mainContent"></a>
      <div align="left">
	<!-- the main content -->
	<div style="text-align:center">
	  <div class="content-area">
	    <h1>
	      We're currently offline for <%= reason ? reason : "maintenance" %>
	      as of <%= Time.now.strftime("%I:%M %p %Z") %>.
	    </h1>
	    <p>
	    Sorry for the inconvenience.  We'll be back 
	    <%= deadline ? "by #{deadline}" : "shortly" %>. 
	    </p>
	  </div>
	</div>
      </div>
    </div>
  </div>
</body>
</html>
<!-- END:maintenance -->

